    String.prototype.ltrim = function(chars) {
      this._trim(chars, 0);
    }
    String.prototype.rtrim = function(chars) {
      this._trim(chars, 1);
    }
    String.prototype.trim = function(chars) {
      this._trim(chars, 2);
    }
    String.prototype._trim = function(chars, mode) {
      if (mode < 0 || mode > 2)
        return;
      switch (typeof(chars)) {
        case "undefined":
          chars = "\f\n\r\t\v";
          break;
        case "string":
          break;
        default:
          try {
            chars = chars.toString();
          }
          catch (x) {
            return;
          }
          break;
      }
      //WScript.echo(chars);
      
      var beg = 0;
      var end = this.length;
      
      if (mode != 1)
        while (beg < end)
          if (chars.indexOf(this[beg]) != -1)
            ++beg;
          else
            break;
      
      if (mode != 2)
        while (beg < end)
          if (chars.indexOf(this[end - 1]) != -1)
            --end;
          else
            break;

      this.valueOf = this.substring(beg, end);
    }
    
    
    var s = "  test ";
    s.ltrim();
    WScript.echo('"' + s + '"');

